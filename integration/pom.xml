<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>none</groupId>
  <artifactId>base</artifactId>
  <version>0</version>
  <packaging>pom</packaging>
  <name>integration</name>
  <properties>
    <tesla.dump.readonly>true</tesla.dump.readonly>
    <jruby.openssl.version>0.9.5</jruby.openssl.version>
    <gem.path>${basedir}/../pkg/rubygems-gem-maven-plugin</gem.path>
    <jruby.plugins.version>1.0.3</jruby.plugins.version>
    <gem.home>${basedir}/../pkg/rubygems-gem-maven-plugin</gem.home>
    <bc.version>1.47</bc.version>
    <tesla.dump.pom>pom.xml</tesla.dump.pom>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jruby</id>
      <url>http://ci.jruby.org/snapshots/maven</url>
    </repository>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>rubygems-releases</id>
      <url>http://rubygems-proxy.torquebox.org/releases</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>gem-maven-plugin</artifactId>
        <version>${jruby.plugins.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>initialize</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcpkix-jdk15on</artifactId>
            <version>${bc.version}</version>
          </dependency>
          <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>${bc.version}</version>
          </dependency>
          <dependency>
            <groupId>rubygems</groupId>
            <artifactId>jruby-openssl</artifactId>
            <version>${jruby.openssl.version}</version>
            <type>gem</type>
          </dependency>
          <dependency>
            <groupId>rubygems</groupId>
            <artifactId>jar-dependencies</artifactId>
            <version>0.0.4</version>
            <type>gem</type>
          </dependency>
          <dependency>
            <groupId>rubygems</groupId>
            <artifactId>ruby-maven</artifactId>
            <version>3.1.1.0.8</version>
            <type>gem</type>
          </dependency>
        </dependencies>
        <configuration>
          <gemPathes>
            <gem-maven-plugin>${gem.home}</gem-maven-plugin>
          </gemPathes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>runit-maven-plugin</artifactId>
        <version>1.0.4-SNAPSHOT</version>
        <executions>
          <execution>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <env>
                <BC_VERSION>${bc.version}</BC_VERSION>
              </env>
              <jrubySwitches>-I../../lib</jrubySwitches>
              <runitDirectory>../../test/test_*rb</runitDirectory>
              <versions>${jruby.versions}</versions>
              <modes>${jruby.modes}</modes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
